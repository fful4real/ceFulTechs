              <li class="nav-item"><a href="" class="nav-link"><i class="icon ion-image tx-primary"></i> Publish photo</a></li>
            </ul><!-- nav -->
          </div><!-- col-4 -->
        </div><!-- row -->

      </div><!-- container -->
    </div>

{% endblock %}
